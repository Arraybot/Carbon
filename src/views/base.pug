html
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width, initial-scale=1')
      link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css')
      link(rel="stylesheet", href="/assets/styles/main.css")
      link(rel='shortcut icon' href='/assets/images/favicon.ico')
      script(src='/assets/scripts/main.js') 
  body.main.has-background-black-ter
    nav.navbar.is-dark(role='navigation' aria-label='main navigation')
      .navbar-brand
        a.navbar-item(href='/')
          img(src='/assets/images/nav.png' alt='[]')
        a.navbar-burger(role='button' class='navbar-burger' aria-label='menu' aria-expanded='false' data-target='navmenu')
          span(aria-hidden='true')
          span(aria-hidden='true')
          span(aria-hidden='true')
      .navbar-menu.has-background-dark#navmenu
        .navbar-start
          a.navbar-item.has-text-white(href='/') Arraybot
          a.navbar-item.has-text-white(href='/panel/') Web Panel
          a.navbar-item.has-text-white(href='/docs/') Documentation
          a.navbar-item.has-text-white(href='/about/') About
        .navbar-end
          .navbar-item.buttons
            if login
              a.button.is-light(href='/logout/') Log out
            else
              a.button.is-light(href='/login/') Log in
            a.button.is-warning(href='https://www.patreon.com/arraying')
              strong Patreon
    section.hero.is-medium.is-warning.is-bold
      .hero-body
        p.title= title
        p.subtitle= subtitle
    block site
    footer.footer.has-background-black-bis.has-text-grey-lighter
      .content.has-text-centered
        span &#169; 2021 Arraybot